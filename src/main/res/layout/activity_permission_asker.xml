<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionAsker">

    <Button
        android:id="@+id/add_permissions_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nadaj zezwolenia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/BUTTON_BACKGROUND_COLOR"
        android:textColor="@color/BUTTON_TEXT_COLOR"
        android:layout_margin="5dp" />

    <Button
        android:id="@+id/close_app_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zamknij aplikacje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_permissions_button"
        android:background="@color/BUTTON_BACKGROUND_COLOR"
        android:textColor="@color/BUTTON_TEXT_COLOR"
        android:layout_margin="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>