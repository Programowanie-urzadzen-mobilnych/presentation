<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/BLOCK_CONFIGURATION_BACKGROUND_COLOR"
    android:id="@+id/chart_two_block_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chart_two_block_magnitude_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="@string/MAGNITUDE"
            android:textColor="?attr/DEFAULT_TEXT_COLOR"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/SPINNER_BACKGROUND">

            <Spinner
                android:id="@+id/chart_two_block_magnitude_spinner"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:entries="@array/MAGNITUDES_SPINNER" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chart_two_block_unit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="@string/UNIT"
            android:textColor="?attr/DEFAULT_TEXT_COLOR"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/SPINNER_BACKGROUND">

            <Spinner
                android:id="@+id/chart_two_block_unit_spinner"
                android:layout_width="160dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chart_two_block_start_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="@string/DATE_START"
            android:textColor="?attr/DEFAULT_TEXT_COLOR"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/EDIT_TEXT_BACKGROUND">

            <EditText
                android:id="@+id/chart_two_block_start_date_input"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="?attr/EDIT_TEXT_BACKGROUND"
                android:textColor="?attr/DEFAULT_TEXT_COLOR"
                android:cursorVisible="false"
                android:focusable="false"
                android:importantForAutofill="no"
                android:inputType="none"
                android:longClickable="false" />

        </RelativeLayout>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chart_two_block_start_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="@string/TIME_START"
            android:textColor="?attr/DEFAULT_TEXT_COLOR"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/EDIT_TEXT_BACKGROUND">
            <EditText
                android:id="@+id/chart_two_block_start_time_input"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="?attr/EDIT_TEXT_BACKGROUND"
                android:textColor="?attr/DEFAULT_TEXT_COLOR"
                android:cursorVisible="false"
                android:focusable="false"
                android:importantForAutofill="no"
                android:inputType="none"
                android:longClickable="false" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chart_two_block_end_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="@string/DATE_END"
            android:textColor="?attr/DEFAULT_TEXT_COLOR"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/EDIT_TEXT_BACKGROUND">

            <EditText
                android:id="@+id/chart_two_block_end_date_input"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="?attr/EDIT_TEXT_BACKGROUND"
                android:textColor="?attr/DEFAULT_TEXT_COLOR"
                android:cursorVisible="false"
                android:focusable="false"
                android:importantForAutofill="no"
                android:inputType="none"
                android:longClickable="false" />

        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/chart_two_block_end_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:text="@string/TIME_END"
            android:textColor="?attr/DEFAULT_TEXT_COLOR"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="?attr/EDIT_TEXT_BACKGROUND">

            <EditText
                android:id="@+id/chart_two_block_end_time_input"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="?attr/EDIT_TEXT_BACKGROUND"
                android:textColor="?attr/DEFAULT_TEXT_COLOR"
                android:cursorVisible="false"
                android:focusable="false"
                android:importantForAutofill="no"
                android:inputType="none"
                android:longClickable="false" />
        </RelativeLayout>
    </TableRow>
</TableLayout>