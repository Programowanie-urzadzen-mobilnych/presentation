<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="10dp">

    <LinearLayout
        android:id="@+id/block_title_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/BLOCK_TITLE_BACKGROUND_COLOR"
        android:orientation="vertical">

        <TextView
            android:id="@+id/block_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/main_view_border"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="@string/BLOCK_TITLE"
            android:textColor="@color/BLOCK_TITLE_COLOR"
            android:textSize="16sp" />
    </LinearLayout>

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/BLOCK_VIEW_BACKGROUND"
        android:orientation="vertical"
        android:layout_below="@id/block_title_background" >
    </FrameLayout>
</RelativeLayout>